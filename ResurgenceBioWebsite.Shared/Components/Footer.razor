@* </EditForm> *@

<footer class="w-full text-white pt-4 box-border">
    <hr class="h-px border-none bg-primary-300" />

    @* Submit address section *@
    <div class="my-4 md:m-4 flex flex-col items-center justify-center md:flex-row md:justify-between gap-2">
        <p class="m-0 w-full text-center text-xl md:w-3/5 md:text-start lg:w-2/5">Want to receive news and updates?</p>

        <form class="flex w-4/5 flex-col gap-2 sm:w-3/5 md:w-2/5 lg:w-3/5 lg:flex-row lg:justify-end">
            <input required id="email" type="email" placeholder="Email" value="@_email.EmailAddress" @oninput="e => _email.EmailAddress = e.Value?.ToString()" class="h-10 rounded border-none bg-primary-300 px-2.5 font-serif text-gray-400 no-underline shadow-none focus:outline-none active:transform-none lg:w-64" />

            <button type="submit" class="h-10 cursor-pointer rounded border-none bg-secondary-600 px-6 font-serif text-white no-underline shadow-none hover:bg-secondary-500 focus:outline-none active:transform-none">
                Get Notified
            </button>
        </form>
    </div>

    <hr class="h-px border-none bg-primary-300" />

    @* note: social media *@
    <div class="w-full flex-1 flex flex-col items-center justify-center place-self-center max-lg:gap-2 lg:gap-4 rounded bg-primary-600 py-10 px-5 box-border">

        @* <img src="./images/resurgence-bio.png" alt="" class="h-11"/> *@

        @* <div class="flex w-full flex-row items-center justify-center gap-5"> *@
        @*     <a href="Fundraising" class="text-xs text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300 md:text-base"> *@
        @*         FAQ *@
        @*     </a> *@
        @* </div> *@

        <p class="m-0 w-full text-center text-xl">
            Find us on social media
        </p>

        <div class="grid grid-cols-5 place-content-evenly gap-2">
            @foreach (var item in _socialMedia)
            {
                <a href="https://linkedin.com/" target="_blank" class="flex max-lg:h-7 max-lg:w-7 lg:h-8 lg:w-8 p-2 cursor-pointer items-center justify-center bg-primary-400 hover:bg-primary-300 rounded no-underline">
                    <svg class="w-full h-full fill-secondary-500">
                        <use href="@item" ></use>
                    </svg>
                </a>
            }
        </div>
    </div>

    <hr class="max-lg:hidden h-px border-none bg-primary-300" />

    @* note: navigation links *@
    <div class="m-4 flex flex-row items-center justify-between max-lg:hidden">
