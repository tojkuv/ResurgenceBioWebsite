<footer class="container mx-auto px-4 bg-[#090b34] text-white">
    <div class="py-4"></div>

    <hr class="border-none h-px bg-[#2f375a]"/>

    @* Submit address section *@
    <div class="flex flex-col md:flex-row items-center justify-center md:justify-between px-3 py-1">
        <p class="text-xl text-center md:text-start w-full md:w-3/5 lg:w-2/5">
            Want to receive news and updates?
        </p>

        <form class="flex flex-col lg:flex-row lg:justify-end gap-2 w-4/5 sm:w-3/5 md:w-2/5 lg:w-3/5">
            <input required
                   id="email"
                   type="email"
                   placeholder="Email"
                   value="@_email.EmailAddress"
                   @oninput="e => _email.EmailAddress = e.Value.ToString()"
                   class="border-none shadow-none no-underline focus:outline-none active:transform-none h-10 rounded bg-[#2f375a] font-serif text-gray-400 px-2.5 lg:w-64"/>

            <button type="submit" class="border-none shadow-none no-underline focus:outline-none active:transform-none cursor-pointer font-serif text-white bg-[#219899] hover:bg-[#167070] h-10 px-6 rounded">Get Notified</button>
        </form>
    </div>

    <hr class="border-none h-px bg-[#2f375a]"/>

    @* company logo, tag line, and social media *@
    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-6 grid-flow-row place-content-evenly px-3 py-4">
        <div class="col-span-2 sm:col-span-3 md:col-span-2 place-self-center flex flex-col items-center md:items-start">
            <img src="./images/nav-menu-logo.png" alt="" class="h-11"/>

            <p class="text-pretty text-center md:text-start text-gray-400 leading-relaxed max-w-full md:max-w-72">
                Lorem ipsum odor amet, consectetuer adipiscing elit. Nam elit ante semper semper eleifend.
            </p>

            <div class="flex place-content-evenly md:place-content-start gap-2">
                @foreach (var item in _socialMedia)
                {
                    <button class="border-none shadow-none no-underline focus:outline-none active:transform-none cursor-pointer text-white bg-[#2f375a] hover:bg-[#202641] rounded flex items-center justify-center w-11 h-11 md:max-lg:h-9 md:max-lg:w-9 p-3 md:max-lg:p-1">
                        <svg class="fill-[#219899] h-6 w-6 md:max-lg:h-4 md:max-lg:w-4">
                            <use href="@item"></use>
                        </svg>
                    </button>
                }
            </div>
        </div>

        @for (var i = 0; i < 4; i++)
        {
            <div class="place-self-center hidden md:block">
                <p class="text-lg font-semibold">
                    Heading @(i+1)
                </p>

                <nav class="flex flex-col gap-y-3">
                    <a href="#" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-[#3cf5f7]">ItemItem</a>
                    <a href="#" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-[#3cf5f7]">ItemItem</a>
                    <a href="#" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-[#3cf5f7]">ItemItem Item</a>
                    <a href="#" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-[#3cf5f7]">ItemItem Item</a>
                    <a href="#" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-[#3cf5f7]">ItemItem Item</a>
                    <a href="#" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-[#3cf5f7]">ItemItem</a>
                </nav>
            </div>
        }
    </div>

    <hr class="border-none h-px bg-[#2f375a]"/>

    @* Relevant company logos section *@
    <div class="flex place-content-evenly gap-2 py-2 overflow-x-clip md:whitespace-nowrap">
        @foreach (var imageUrl in _logoUrls)
        {
        <img src="@imageUrl" class="h-4 sm:h-7 md:h-10 lg:h-14 w-auto" alt=""/>
        }
    </div>







    <hr class="border-none h-px bg-[#2f375a]"/>

    @* legal disclosures section *@
    <div class="flex flex-col sm:flex-row items-center justify-between px-3 pb-3 sm:pb-2">
        <p class="text-gray-400 text-xs md:text-base">Copyright &copy ResurgenceBio, 20XX-@DateTime.Today.Year.</p>

        <div class="flex items-center justify-between gap-4">
            <a href="#" class="text-gray-400 text-xs md:text-base no-underline hover:text-white hover:underline hover:decoration-[#3cf5f7]"> Terms & Conditions </a>
            <a href="#" class="text-gray-400 text-xs md:text-base no-underline hover:text-white hover:underline hover:decoration-[#3cf5f7]"> Trademark Policy</a>
            <a href="#" class="text-gray-400 text-xs md:text-base no-underline hover:text-white hover:underline hover:decoration-[#3cf5f7]"> Privacy Policy</a>
        </div>
    </div>
</footer>

