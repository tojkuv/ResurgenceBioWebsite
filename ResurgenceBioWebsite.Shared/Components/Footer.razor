            <div class="flex flex-col gap-3">
                <nav class="flex flex-col gap-3">
                    <a href="AboutUs" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        About Us
                    </a>
                </nav>
            </div>

            <div class="flex flex-col gap-3">
                <p class="m-0 font-semibold">
                    Elevate
                </p>

                <nav class="flex flex-col gap-3">
                    <a href="AttbAccreditation" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        AATB Accreditation
                    </a>
                    <a href="CaresReporting" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        CARES Reporting
                    </a>
                    <a href="SpearInitiative" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        SPEAR Initiative
                    </a>
                    <a href="Beacon" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        BEACON
                    </a>
                </nav>
            </div>

            <div class="flex flex-col gap-3">
                <p class="m-0 font-semibold">
                    Educate
                </p>

                <nav class="flex flex-col gap-3">
                    <a href="TheStasisKnowledgeHub" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        The Stasis Knowledge Hub
                    </a>
                    <a href="Volunteering" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        Volunteering
                    </a>
                </nav>
            </div>

            <div class="flex flex-col gap-3">
                <p class="m-0 font-semibold">
                    Innovate
                </p>

                <nav class="flex flex-col gap-3">
                    <a href="AldehydeStabilizedPreservationProtocol" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        Aldehyde Stabilized Preservation Protocol
                    </a>
                    <a href="WholeBodyFieldCryoprotection" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        Whole Body Field Cryoprotection
                    </a>
                    <a href="SstOptimization" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        Standby, Stabilization, and Transport (SST) Optimization
                    </a>
                    <a href="RegionalReadinessDevelopment" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        Regional Readiness Development
                    </a>
                    <a href="RegionalInventoryManagement" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        Regional Inventory Management
                    </a>
                    <a href="DocumentationDevelopment" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        Documentation Development
                    </a>
                    <a href="LifebridgeProgram" class="text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300">
                        Lifebridge Program
                    </a>
                </nav>
            </div>
        </div>
    </div>

    <hr class="h-px border-none bg-primary-300" />

    @* Relevant company logos section *@
    <div class="flex place-content-evenly gap-2 overflow-x-clip py-4 md:whitespace-nowrap">
        @foreach (var imageUrl in _logoUrls) {
        <img src="@imageUrl" class="h-4 w-auto sm:h-7 md:h-10 lg:h-12 xl:h-14" alt="" />
        }
    </div>

    <hr class="h-px border-none bg-primary-300" />

    @* legal disclosures section *@
    <div class="m-4 flex flex-col items-center justify-between sm:flex-row">
        <p class="text-xs text-gray-400 md:text-base">Copyright &copy ResurgenceBio, 20XX-@DateTime.Today.Year.</p>

        <div class="flex items-center justify-between gap-4">
            <a href="TermsAndConditions" class="text-xs text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300 md:text-base">
                Terms & Conditions
            </a>
            <a href="TrademarkPolicy" class="text-xs text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300 md:text-base">
                Trademark Policy
            </a>
            <a href="PrivacyPolicy" class="text-xs text-gray-400 no-underline hover:text-white hover:underline hover:decoration-secondary-300 md:text-base">
                Privacy Policy
            </a>
        </div>
    </div>
</footer>

